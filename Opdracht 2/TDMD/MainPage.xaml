<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMD.MainPage"
             xmlns:viewModels="clr-namespace:TDMD">

    <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="Status" Text="Status: Disconnected" Margin="0, 0, 0, 10" FontSize="32" HorizontalOptions="Center" VerticalOptions="Center"/>
            <ListView ItemsSource="{Binding Lamps}" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout>
                                <Label Text="{Binding name}" VerticalOptions="Center" Margin="10,0,0,0"/>
                                <Label Text="{Binding status, StringFormat='Is On: {0}'}" VerticalOptions="Center" Margin="10,0,0,0"/>
                                <BoxView HorizontalOptions="FillAndExpand"/>
                                <Button Text="Toggle" Clicked="OnToggleButtonClicked" CommandParameter="{Binding .}" Margin="10,0,0,0" BackgroundColor="Gray"/>
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
