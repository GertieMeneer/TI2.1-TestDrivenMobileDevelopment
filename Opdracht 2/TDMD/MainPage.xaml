<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMD.MainPage"
             xmlns:viewModels="clr-namespace:TDMD">

    <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="Status" Text="Disconnected"/>

            <!-- Voeg een ListView toe met een binding naar Lights in de ViewModel -->
            <ListView ItemsSource="{Binding Lamps}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding IsOn, StringFormat='Is On: {0}'}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
